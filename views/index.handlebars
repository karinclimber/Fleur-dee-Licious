<div class="container">
<div class="jumbotron text-center">
    <h1>Fleur-dee-Licious</h1>
</div>
</div>
<div class="row">
<div class="col-lg-3 col-md-12 col-sm-12 col-xs-12" id="newBox">
    <div>

<h2>Have a delicious New Orleans treat! </h2>
    </div>
<br>
<ul>
    {{#each foods}}
    {{#unless this.eaten}}
<li>
    <p>{{this.food_name}}
    <form method="POST" action="/foods/{{this.id}}?_method=PUT">
    <button class="eatFood btn btn-sm btn-warning" type="submit">Eat the {{this.food_name}}!!</button></form></p>
</li>
{{/unless}}
    {{/each}}
</ul>
</div>

<div class="ccol-lg-1 col-md-12 col-sm-12 col-xs-12">
</div>

<div class="col-lg-3 col-md-12 col-sm-12 col-xs-12" id="addBox">
    <div>
  <h3>Add a New Food</h3>
    </div>
    <br>
    <div>
  <form action="/foods" method="POST">
  	<textarea type="text" id="name" name="foodname" placeholder="Mmmmm"></textarea>
      <br><br>
  	<button class="btn btn-lg btn-warning" type="submit">Submit New Food</button>
  </form>
    </div>
</div>

<div class="col-lg-1 col-md-12 col-sm-12 col-xs-12">
</div>

<div class="col-lg-3 col-md-12 col-sm-12 col-xs-12" id="eaten">
    <div>
  <h3>All Foods Eaten</h3>
</div>
<br>
<ul>
  {{#each foods}}
    {{#if this.eaten}}
      <li>
        {{this.food_name}}
      </li>
    {{/if}}
  {{/each}}
</ul>
<div class="col-lg-1">
</div>
</div>
</div>
</div>